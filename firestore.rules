rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Articles - open access for development
    match /articles/{articleId} {
      allow read, write: if true; // Open access for development/automation
    }

    // Categories - open access for development
    match /categories/{categoryId} {
      allow read, write: if true; // Open access for development
    }



    // Analytics - open access for development
    match /analytics/{analyticsId} {
      allow read, write: if true; // Open access for development
    }

    // Automation jobs - open access for automation
    match /automation_jobs/{jobId} {
      allow read, write: if true; // Open access for automation
    }

    // Trends - open access for development
    match /trends/{trendId} {
      allow read, write: if true; // Open access for development
    }

    // Settings - open access for development
    match /settings/{settingId} {
      allow read, write: if true; // Open access for development
    }

    // Catch-all rule for development - allows all operations
    match /{document=**} {
      allow read, write: if true;
    }
  }
}